<Window x:Class="MMM.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMM"
        mc:Ignorable="d"
        Title="Edit" Height="550" Width="380" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Icon" Width="100" Height="113" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0">
            <Image x:Name="img" HorizontalAlignment="Left" Height="90" VerticalAlignment="Top" Width="90" Source="/default.png"/>
        </GroupBox>

        <GroupBox Header="Modpack name" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,0" Width="236">
            <TextBox IsReadOnly="True" x:Name="modpackname"></TextBox>
        </GroupBox>
        <GroupBox Header ="Mods" HorizontalAlignment="Left" VerticalAlignment="Center" Width="236" Height="438" Margin="134,0,0,0">
            <TextBlock x:Name="modslist" Margin="3,0,0,0" VerticalAlignment="Top">

            </TextBlock>
        </GroupBox>
        <Button Content="Open folder" Click="Button_Click" HorizontalAlignment="Left" Width="100" Margin="10,127,0,0" VerticalAlignment="Top"/>
        <Button Content="Delete" Click="deleteclick" HorizontalAlignment="Left" Width="100" Margin="10,152,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
